<arrow>
  <file>resources/images/arrow.png</file>
  <dimensions>
    <!--height of ONE SPRITE, not hte whole sheet-->
    <width>72</width>
    <height>72</height>

    <!--pivot point of sprite - leave 0, 0 for default pivot-->
    <pivot_x>0</pivot_x>
    <pivot_y>0</pivot_y>

    <!--number of frames in the sprite-->
    <frames>4</frames>
    <!--delay in game frames between sprite animations-->
